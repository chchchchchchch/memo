function TXITLE() {

   TID=`echo $ARG | md5sum | cut -c 1-4`
   TSVG=`find . -name "*$TID*"| shuf -n 1`
   echo $TSVG 

   TPDF=$TMPDIR/${TMPID}${TID}title.pdf
   inkscape --export-pdf=$TPDF $TSVG

   write2src "\includepdf{$TPDF}"
   write2src "\emptypage"

}


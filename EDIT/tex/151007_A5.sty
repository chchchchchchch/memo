  \newcount\vsi
  \newcommand\cleartofour{
   \mbox{}\clearpage
   \pagestyle{empty}
   \vs\thepage
   \advance\vs by 3
   \vsi\vs
   \divide\vs by 4
   \multiply\vs by 4
   \ifnum\vs=\vsi\else\cleartofour\fi
  }
